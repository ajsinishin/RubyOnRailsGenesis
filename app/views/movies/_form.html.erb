<div class="formatx">  

  <%= form_for(@movie) do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title, autofocus: true %>
    </p>
      <br>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description, cols: 40, rows: 7 %>
    </p>
    <br>
    <p>
      <%= f.label :rating %><br/>
      <%= f.text_field :rating, size: 5 %>
    </p>
    <br>
    <p>
      <%= f.label :released_on %><br/>
      <%= f.date_select :released_on %>
    </p>
    <br>
    <p>
      <%= f.label :total_gross %><br/>
      <%= f.number_field :total_gross %>
    </p>
    <br>
    <p>
      <%= f.label :inmage %><br/>
      <%= f.text_area :inmage %>
    </p>
    <br>
    <p>
    <%= f.label :cast %><br/>
    <%= f.text_field :cast %>
    </p>
    <br>
    <p>
      <%= f.label :director %><br/>
      <%= f.text_field :director %>
    </p>
    <br>
    <p>
      <%= f.label :duration %><br/>
      <%= f.text_field :duration, size: 10 %>
    </p>
    <br>
    <p>
      <%= f.submit %>
    </p>
    <br>
  <% end %>
</div>